---
import DockExpandable from "../components/dock-expandable";
import "../styles/globals.css";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="My land on the web to share some cool stuff"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter transition:animate="fade" />
  </head>
  <body
    class="flex min-h-screen items-start justify-center bg-stone-900 font-sans"
  >
    <slot />
    <DockExpandable client:load />
  </body>
</html>
