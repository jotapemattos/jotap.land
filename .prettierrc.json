{
  "trailingComma": "none",
  "singleQuote": true,
  "arrowParens": "always",
  "tabWidth": 2,
  "semi": false,
  "bracketSameLine": true,
  "overrides": [
    {
      "files": "*.svg",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"]
}
